<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/space_x_large"
    android:layout_marginVertical="@dimen/space_small">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_book_cover"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="@dimen/space_x_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_book_title"
        style="@style/DiscussionBookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_median"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_book_cover"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="오브젝트" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/DiscussionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_opinion_summary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_book_title"
        app:layout_constraintTop_toBottomOf="@id/tv_book_title"
        tools:text="캡슐화 왜함?" />

    <TextView
        android:id="@+id/tv_opinion_summary"
        style="@style/DiscussionOpinionSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_book_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="캡슐화하는 사람들 진짜진짜진짜진짜 캡슐화하는 사람들 진짜진짜진짜진짜" />

</androidx.constraintlayout.widget.ConstraintLayout>