<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:background="@drawable/bg_radius_10dp"
    android:backgroundTint="@color/green_df"
    android:elevation="4dp"
    android:paddingHorizontal="16dp">

    <ImageView
        android:id="@+id/iv_icon_snack_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_alert" />

    <TextView
        android:id="@+id/tv_snack_bar_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:layout_marginStart="10dp"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/gray_4d"
        android:textSize="@dimen/font_size_large"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_icon_snack_bar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="서버 오류가 발생했습니다. 잠시 후 다시 시도해주세요, 잠시 후 다시 시도해주세요" />

</androidx.constraintlayout.widget.ConstraintLayout>
