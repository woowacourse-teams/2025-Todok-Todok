<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/space_24"
    android:layout_marginTop="@dimen/space_12"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_holder"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:background="#93DC90"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginEnd="@dimen/space_16"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="@color/black_18"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_holder"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="책 제목 예시 텍스트" />

        <TextView
            android:id="@+id/tv_discussion_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_16"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/font_size_large"
            app:layout_constraintTop_toBottomOf="@id/tv_book_title"
            app:layout_constraintStart_toEndOf="@id/view_holder"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="김수한무 거북이와 두루미 삼천갑자 동방삭 치치카포 사리사리센타 워리워리 세드리벤 슬뫼 이무드리 샘이나리 시프네르 보르무스 베르무스 삼사무기 가필리아 구름에 달 가듯이" />

        <TextView
            android:id="@+id/tv_discussion_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_12"
            android:layout_marginEnd="@dimen/space_16"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/gray_66"
            android:textSize="@dimen/font_size_large"
            app:layout_constraintTop_toBottomOf="@id/tv_discussion_title"
            app:layout_constraintStart_toEndOf="@id/view_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="김수한무 거북이와 두루미 삼천갑자 동방삭 치치카포 사리사리센타 워리워리 세드리벤 슬뫼 이무드리 샘이나리 시프네르 보르무스 베르무스 삼사무기 가필리아 구름에 달 가듯이" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
