<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/space_8"
    android:paddingStart="@dimen/space_24"
    android:paddingEnd="@dimen/space_12">

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="@dimen/font_size_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_date"
        tools:text="객체지향짱"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="@dimen/font_size_large"
        android:textColor="@color/gray_76"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname"
        app:layout_constraintStart_toStartOf="@id/tv_nickname"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="2025.07.31"/>

    <TextView
        android:id="@+id/tv_unblock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/black_18"
        android:text="해제"
        android:paddingVertical="@dimen/space_12"
        android:paddingHorizontal="25dp"
        android:background="@drawable/bg_white_stroke_radius_8dp"
        app:layout_constraintTop_toTopOf="@id/tv_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_date" />

</androidx.constraintlayout.widget.ConstraintLayout>
